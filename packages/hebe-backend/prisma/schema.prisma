// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String

  firstName String?
  lastName  String?

  orders Orders[]
  cart   CartProducts[]
}

model Products {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  productName        String
  productDescription String
  productPrice       Int
  productImg         String
}

model Orders {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // productName        String
  // productDescription String
  // productPrice       Int
  userId String
  user   Users  @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CartProducts {
  productId String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // productName        String
  // productDescription String
  // productPrice       Int
  userId String
  user   Users  @relation(fields: [userId], references: [id], onDelete: Cascade)
}
